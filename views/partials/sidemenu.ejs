<div class="col-md-3 left-column ">
    <div class="position-fixed">
        <ul class="list-group py-3 dropdown-list">

            <% if(user.isAdmin) { %>


            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/admin/dashboard" class=" py-3 px-4">
                        <i class="fa fa-home fa-lg mr-3" aria-hidden="true"></i>Home
                    </a>
                </div>
            </li>
            
            <% } %>

            <% if(!user.isAdmin) { %>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/users/feeds" class=" py-3 px-4">
                        <i class="fa fa-home fa-lg mr-3" aria-hidden="true"></i>Home
                    </a>
                </div>
            </li>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/users/feeds" class=" py-3 px-4">
                        <img class="rounded-circle mr-3" height="25px" width="25px"
                            src=<%= user.image_src %> /><%=user.username%>
                    </a>
                </div>
            </li>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/users/profile" class=" py-3 px-4">
                        <i class="fa fa-user fa-lg mr-3" aria-hidden="true"></i><%=user.name%>
                    </a>
                </div>
            </li>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="#" class=" py-3 px-4">
                        <i class="fa fa-map-marker fa-lg mr-3" aria-hidden="true"></i><%=user.location%>
                    </a>
                </div>
            </li>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/users/notifications" class=" py-3 px-4">
                        <i class="fa fa-bell mr-3" aria-hidden="true"></i>
                        Notifications
                    </a>
                </div>
            </li>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="#" class=" py-3 px-4">
                        <i class="fa fa-pencil fa-lg mr-3" aria-hidden="true"></i><%=user.bio%>
                    </a>
                </div>
            </li>

            <% } %>

            <% if(user.isAdmin) { %>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/admin/logout" class=" py-3 px-4">
                        <i class="fa fa-sign-in fa-lg mr-3" aria-hidden="true"></i>Logout
                    </a>
                </div>
            </li>

            <% } else { %>

            <li class="list-group-item">
                <div class="on-hover-show">
                    <a href="/user/logout" class=" py-3 px-4">
                        <i class="fa fa-sign-in fa-lg mr-3" aria-hidden="true"></i>Logout
                    </a>
                </div>
            </li>

            <% } %>
           
        </ul>
    </div>

</div>